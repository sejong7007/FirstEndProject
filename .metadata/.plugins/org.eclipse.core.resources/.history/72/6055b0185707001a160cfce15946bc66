"use strict";
var auth = auth || {};
auth = (()=>{
	const WHEN_ERR = '호출하는 JS파일을 찾지 못했습니다.'
	let _, js, css, img, auth_vue_js, router_js;
	let init =()=> {
		_=$.ctx()
		js=$.js()
		css=$.css()
		img=$.img()
		router_js=js+'/cmm/router.js'
		auth_vue_js=js+'/vue/auth_vue.js'
	}
	
	let onCreate =()=>{
		init()
		$.when(
			$.getScript(auth_vue_js),
			$.getScript(router_js)
		).done(()=>{
			setContentView()
			$('#a_go_bugs').click(e=>{
				e.preventDefault()
				alert('벅스 화면으로 변경')
				$('body').empty()
				$('<table id="tab"><tr></tr></table>')
				.css({ border: '1px solid black', width: '80%', height : '90%', margin : '0 auto'})
				.appendTo('body')
			})
			$('#a_go_cgv').click()
			$('#a_go_naver').click()
			
			
		}).fail(()=>{
				alert(WHEN_ERR)
			})
	}
		
	let setContentView =()=>{
		$('head').html(auth_vue.login_head({css: $.css(), img: $.img()}))
        $('body').addClass('text-center')
        .html(auth_vue.login_body({css: $.css(), img: $.img()}))
	}
	
    
    
	return {onCreate}	
	
})();
